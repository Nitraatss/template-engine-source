block variables
  - var pathContentImg = "static/images/content/"
  - var pathCommonImg = "static/images/common/"

doctype html
html(lang='ru-RU')
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet" type="text/css" href="./static/css/styles.css")
    title #{title}
  body
    .wrapper
      block header
      .content
        block content
      block footer
        include ../modules/footer/footer
